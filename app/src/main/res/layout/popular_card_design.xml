<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/artworkImage"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/start"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/artworkTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category1"
            android:layout_toEndOf="@id/artworkImage"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/playfair_display"/>

        <TextView
            android:id="@+id/artworkDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sgujklfuiklafsdghuklfghaedg"
            android:layout_below="@id/artworkTitle"
            android:layout_toEndOf="@id/artworkImage"
            android:padding="10dp"
            android:fontFamily="@font/playfair_display"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>